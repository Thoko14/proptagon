{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@types/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@config/*": ["shared/config/*"]
    }
  },
  "include": [
    "modules/*/frontend/src/**/*",
    "modules/*/frontend/**/*",
    "shared/**/*",
    "infrastructure/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
} 